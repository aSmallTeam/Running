.head{
display:flex;flex-direction: column;background: #efefef;width:100%;padding: 100rpx 0rpx; align-items: center;  justify-content: space-between;
}
.head image{
  width:150rpx;
  height:150rpx;
  border-radius: 50%;
  margin:0 auto;
}








.content{
  display:flex;
  flex-direction: column;
}
.content .li{
  display:flex;
  flex-direction: row;
  height: 80rpx;
}
.content .li .image{
  width: 70rpx;
  height: 80rpx;
  padding-left: 20rpx;
}
.content .li .image image{
  padding-top: 15rpx;
  width: 50rpx;
  height: 50rpx;
}
.content .li .txt{
  width: 100%;
  height: 80rpx;
   line-height: 80rpx; 
  border-bottom:2rpx #eee solid;
  margin-left: 5px;
}
.content .li .txt text{
  font-size: 34rpx;
}